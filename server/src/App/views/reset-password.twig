{% extends 'login_layout.twig' %}

{% block title %}Reset your password{% endblock %}

{% block content %}

    <hp>
        Escolha uma nova senha, {{ user.displayName }}
    </p>

    {% if error %}
        <div class="alert alert-danger">{{ error|nl2br }}</div>
    {% endif %}

    <form method="POST">
          <div class="form-group has-feedback">
            <input class="form-control" name="password" type="password" id="input-password" required placeholder="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>
          <div class="form-group has-feedback">
            <input class="form-control" name="confirm_password" type="password" id="input-confirm-password" required placeholder="Re-type password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
          </div>

          <div class="row">
            <div class="col-xs-8">
                    
            </div><!-- /.col -->
            <div class="col-xs-4">
              <button type="submit" class="btn btn-primary btn-block btn-flat">Salvar</button>
            </div><!-- /.col -->
          </div>
    </form>

{% endblock %}
