{% extends 'layout.twig' %} 
    {% block title %}Eventos{% endblock %} 
    {% block start_css %}
        <link href=
        "{{ app.request.basePath }}/assets/admin-lte/plugins/fullcalendar/fullcalendar.min.css"
        rel="stylesheet" type="text/css">
        <link href=
        "{{ app.request.basePath }}/assets/admin-lte/plugins/fullcalendar/fullcalendar.print.css" media="print" rel="stylesheet" type="text/css">
        <link href= "{{ app.request.basePath }}/assets/admin-lte/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css">
    {% endblock %} 

    {% block content %}
        {# ISSO EH MIUTO FEIO #}
        <link href= "{{ app.request.basePath }}/css/eventos.css" rel="stylesheet" type="text/css">
        <div class="row">
            <div class="col-xs-6">
                <form method="post" action="{{ path('eventos') }}">
                    <h4>
                        Adicionar Evento
                    </h4>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Título</label>
                        <input class="form-control" type="text" name="title" required>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Descrição</label> 
                        <textarea class="form-control" placeholder="Descreva o evento." name="text" required></textarea>
                    </div>
                    <!-- Date and time range -->

                    <div class="form-group">
                        <label>Selecionar data:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-clock-o"></i>
                            </div>
                            <input class="form-control pull-right" id="reservationtime" type="text" name="data" required>
                        </div>
                        <!-- /.input group -->
                    </div>
                    <!-- /.form group -->

                    <div class="form-group">
                        <label for="exampleInputEmail1">Local</label>
                        <input class="form-control" id="autocomplete" placeholder="Enter your address" type="text" name="endereco">
                    </div>

                    <div class="row">
                        <div class="col-xs-8">
                        </div>
                        <!-- /.col -->

                        <div class="col-xs-4">
                            <input id="lat" name="lat" type="hidden" value="">
                            <input id="lon" name="lon" type="hidden" value="">
                            <button class="btn btn-primary btn-block btn-flat" type="submit">Salvar</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
            <!-- /.col -->

            <div class="col-xs-6">
                <div id="calendar">
                </div>
            </div>
        </div>

{% endblock %}

{% block closing_scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js" type="text/javascript"></script>
<script src="{{ app.request.basePath }}/assets/admin-lte/plugins/fullcalendar/fullcalendar.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js" type="text/javascript"></script>
<script src="{{ app.request.basePath }}/assets/admin-lte/plugins/daterangepicker/daterangepicker.js" type="text/javascript"></script>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true&libraries=places"></script>
<script type="text/javascript">
    var eventos = {{data|raw}};
</script>
<script src="{{ app.request.basePath }}/js/eventos.js" type="text/javascript"></script>

{% endblock %}

